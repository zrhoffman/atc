FROM        alpine:3.11 as gems

RUN         apk add --no-cache \
				# To build gems
				make \
				musl-dev \
				ruby-dev \
				gcc

			# Traffic Portal build dependency
RUN         gem install compass

FROM        alpine:3.11
MAINTAINER  dev@trafficcontrol.apache.org
# top level of trafficcontrol directory must be mounted as a volume:
# docker run --volume /trafficcontrol:$(pwd) ...
#
VOLUME  /trafficcontrol

COPY        --from=gems /usr/lib/ruby/gems /usr/lib/ruby/gems
COPY        --from=gems /usr/bin/compass /usr/bin/

RUN     apk add --no-cache \
			# Required to generate special sauce
			git \
			# Traffic Portal build dependencies
			npm \
			ruby \
			# For building RPMs
			rpm \
			# Used in clean_build.sh
			rsync

RUN     npm -g install bower grunt-cli && \
		# bower will disallow running as root by default
		echo '{ "allow_root": true }' > /root/.bowerrc

COPY    /build/clean_build.sh /clean_build.sh
CMD     /clean_build.sh traffic_portal
# vi:syntax=Dockerfile
