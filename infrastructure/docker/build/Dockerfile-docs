FROM    alpine:3.11 as modules
RUN     apk add --no-cache \
			python3 \
			py3-psutil && \
		python3 -m pip install --upgrade setuptools

### docs specific requirements
COPY    docs/source/requirements.txt /docs.requirements.txt
RUN     python3 -m pip install -r /docs.requirements.txt

FROM    alpine:3.11
MAINTAINER  dev@trafficcontrol.apache.org
COPY    --from=modules /usr/lib/python3.8/site-packages /usr/lib/python3.8/site-packages
COPY    --from=modules /usr/bin/sphinx-build /usr/bin/

# top level of trafficcontrol directory must be mounted as a volume:
# docker run --volume /trafficcontrol:$(pwd) ...
VOLUME  /trafficcontrol

RUN     apk add --no-cache \
			# Required to generate special sauce
			git \
			# To build docs
			make \
			python3 \
			# Used in clean_build.sh
			rsync

COPY    /build/clean_build.sh /clean_build.sh
CMD     /clean_build.sh docs
# vi:syntax=Dockerfile
